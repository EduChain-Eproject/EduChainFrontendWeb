{
  "compilerOptions": {
    "target": "ESNext",
    "lib": [
      "DOM",
      "DOM.Iterable",
      "ESNext"
    ],
    "module": "ESNext",
    "skipLibCheck": true,
    /* Bundler mode */
    "moduleResolution": "bundler",
    "allowImportingTsExtensions": true,
    "resolveJsonModule": true,
    "isolatedModules": true,
    "noEmit": true,
    "jsx": "react-jsx",
    /* Linting */
    "strict": true,
    "noUnusedLocals": true,
    "noUnusedParameters": true,
    "noFallthroughCasesInSwitch": true
  },
  "include": [
    "src/core",
    "src/lib.d.ts",
    "src/core/pages",
    "src/core/types",
    "src/core/common",
    "src/core/layout",
    "src/core/public/js",
    "src/core/hooks"
  ],
  "references": [
    {
      "path": "./tsconfig.node.json"
    }
  ]
}